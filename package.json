{
	"name": "react-best-practices_vite-template",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"lint": "oxlint -c oxlintrc.json --import-plugin --jsdoc-plugin  --vitest-plugin --jsx-a11y-plugin --nextjs-plugin --react-perf-plugin && eslint -c eslint.config.js . --max-warnings 0",
		"lint:fix": "oxlint --fix && eslint --fix ./**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,json}",
		"prettier": "prettier . --check",
		"prettier:fix": "prettier . --write",
		"stylelint": "stylelint ./**/*.{css,scss}",
		"stylelint:fix": "stylelint --fix ./**/*.{css,scss}",
		"lint-md": "markdownlint-cli2 --config \".markdownlint.json\" **/*.md \"#node_modules\"",
		"lint-md:fix": "markdownlint-cli2 --config \".markdownlint.json\" --fix **/*.md \"#node_modules\"",
		"lint-html": "htmlhint **/*.html",
		"check-for-dupes": "npx jscpd ./"
	},
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@eslint/compat": "^1.2.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.12.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/eslint__eslintrc": "^2.1.2",
		"@types/eslint__js": "^8.42.3",
		"@types/eslint-plugin-jsx-a11y": "^6.9.0",
		"@types/eslint-plugin-security": "^3.0.0",
		"@types/react": "^18.3.10",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.3",
		"eslint-plugin-check-file": "^2.8.0",
		"eslint-plugin-editorconfig": "^4.0.3",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-import-x": "^4.3.1",
		"eslint-plugin-jsdoc": "^50.3.1",
		"eslint-plugin-jsonc": "^2.16.0",
		"eslint-plugin-jsx-a11y": "^6.10.0",
		"eslint-plugin-oxlint": "^0.9.9",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.37.1",
		"eslint-plugin-react-hooks": "^5.1.0-rc.0",
		"eslint-plugin-react-refresh": "^0.4.12",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-class-members": "^1.20.0",
		"eslint-plugin-tsdoc": "^0.3.0",
		"eslint-plugin-unicorn": "^56.0.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^15.10.0",
		"htmlhint": "^1.1.4",
		"husky": "^9.1.6",
		"jscpd": "^4.0.5",
		"markdownlint-cli2": "^0.14.0",
		"oxlint": "^0.6.1",
		"prettier": "3.3.3",
		"stylelint": "^16.9.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^5.0.2",
		"typescript": "5.5.3",
		"typescript-eslint": "^8.8.0",
		"unplugin-oxlint": "^0.6.3",
		"vite": "^5.4.8",
		"vite-plugin-purgecss-updated-v5": "^1.2.1",
		"vitest": "^2.1.2"
	},
	"prettier": {
		"endOfLine": "lf",
		"singleAttributePerLine": true
	},
	"lint-staged": {
		"*.(j|t)s": "npm run lint:fix",
		"*{css,s(a|c)ss}": "npm run stylelint:fix",
		"*.html": "npm run lint-html",
		"*.md": "npm run lint-md:fix"
	},
	"jscpd": {
		"threshold": 0.5,
		"reporters": [
			"consoleFull"
		],
		"ignore": [
			"**/__snapshots__/**",
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/fonts/**"
		],
		"absolute": true
	}
}
